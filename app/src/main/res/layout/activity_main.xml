<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddesdecero.statusbar.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/darkenIconsColorStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Color Iconos Status Bar" />

        <Button
            android:id="@+id/lightIconsColorStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Color Iconos Status Bar" />

        <Button
            android:id="@+id/changeColorStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Color Status Bar" />

        <Button
            android:id="@+id/hideStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocultar Status Bar" />

        <Button
            android:id="@+id/makeContentAppearBehindStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A toda Pantalla" />

    </LinearLayout>

</RelativeLayout>
